pipeline {
    agent any

    environment {
        ACR_REGISTRY = "registry-intl.ap-southeast-5.aliyuncs.com/gandes-test/gandes-repo"
        ACR_REPO = "gandes-repo/my-app"
        ACR_CREDENTIALS = credentials('acr-credentials')
        KUBECONFIG = credentials('kubeconfig')
    }

    stages {
        stage('Checkout') {
            steps {
                git 'https://github.com/febriyandi-source/gandes-repo.git'
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    docker.build("${ACR_REGISTRY}/${ACR_REPO}:${env.BUILD_ID}")
                }
            }
        }

        stage('Push Docker Image') {
            steps {
                script {
                    docker.withRegistry("https://${ACR_REGISTRY}", ACR_CREDENTIALS) {
                        docker.image("${ACR_REGISTRY}/${ACR_REPO}:${env.BUILD_ID}").push()
                    }
                }
            }
        }

        stage('Deploy to ACK') {
            steps {
                script {
                    withKubeConfig([credentialsId: 'kubeconfig']) {
                        sh '''
                        kubectl set image deployment/my-app my-app=${ACR_REGISTRY}/${ACR_REPO}:${env.BUILD_ID}
                        '''
                    }
                }
            }
        }
    }
}
